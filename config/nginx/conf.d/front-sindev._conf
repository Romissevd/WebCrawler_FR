server {
    listen 80 default_server;
	server_name _;

    access_log  /var/www/webcrawler/log/nginx_access.log;
    error_log   /var/www/webcrawler/log/nginx_error.log;

    root        /var/www/webcrawler/client/templates/admin;
    index       index.html;

    location / {
        proxy_pass http://localhost:5000/;
    }

    location ~ /AdminBSB(.*) {
        root /var/www/webcrawler/client/templates/AdminBSB;
        try_files $1 =404;
    }

    # uncomment to avoid processing of calls to non-existing static files
    location ~ (\.(js|txt|eot|svg|ttf|woff|woff2|css|png|jpg|gif|swf|ico|pdf|mov|fla|zip|rar)$) {
        try_files $uri =404;
    }

    error_page 404 /404.html;

    location ~ /\.(ht|svn|git) {
        deny all;
    }
}

